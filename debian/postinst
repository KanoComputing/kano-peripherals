#

TMP_FILE=/tmp/kano_periph_conf


case "$1" in
    configure)

        # Create custom sudoers file
        echo "%sudo   ALL=(root) NOPASSWD: /usr/bin/kano-speakerleds" > $TMP_FILE

        # The owner and group for the sudoers file must both be 0
        chown root:root $TMP_FILE

        # The file permissions must be set to 0440
        chmod 0440 $TMP_FILE

        # Move the file to the sudoers directory
        mv $TMP_FILE /etc/sudoers.d/

        # add kano-peripherals to startup
        update-rc.d kano-peripherals defaults

        ;;
esac

#DEBHELPER#

exit 0
